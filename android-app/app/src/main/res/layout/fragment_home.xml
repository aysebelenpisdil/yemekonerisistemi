<?xml version="1.0" encoding="utf-8"?>
<!-- Ana Sayfa / Dashboard Ekranı -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yos_background"
    tools:context=".ui.home.HomeFragment">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yos_surface_base">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/home_greeting"
            app:titleTextColor="@color/yos_text_primary"
            app:navigationIconTint="@color/yos_text_primary"
            app:subtitleTextColor="@color/yos_text_secondary"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Ana İçerik -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Envanter Özeti Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/inventorySummaryCard"
                style="@style/Widget.YOS.Card.Recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/inventoryTitleText"
                        style="@style/TextAppearance.YOS.H2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_my_inventory"
                        android:textColor="@color/yos_text_primary"/>

                    <TextView
                        android:id="@+id/inventoryCountText"
                        style="@style/TextAppearance.YOS.Display"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        tools:text="12 malzemen var"
                        android:textColor="@color/yos_text_primary"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/manageInventoryButton"
                        style="@style/Widget.YOS.Button.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Yönet"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Hızlı Erişim Butonları -->
            <TextView
                style="@style/TextAppearance.YOS.H2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_quick_actions"
                android:textColor="@color/yos_text_primary"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:weightSum="3">

                <!-- Tarif Bul -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/findRecipesCard"
                    style="@style/Widget.YOS.Card.Recipe"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🔍"
                            android:textSize="32sp"/>

                        <TextView
                            style="@style/TextAppearance.YOS.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/home_find_recipes"
                            android:textStyle="bold"
                            android:textColor="@color/yos_text_primary"
                            android:gravity="center"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Yemek Planla -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mealPlannerCard"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📅"
                            android:textSize="32sp"/>

                        <TextView
                            style="@style/TextAppearance.YOS.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/home_meal_planner"
                            android:textStyle="bold"
                            android:textColor="@color/yos_text_primary"
                            android:gravity="center"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Alışveriş -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/shoppingListCard"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🛒"
                            android:textSize="32sp"/>

                        <TextView
                            style="@style/TextAppearance.YOS.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/home_shopping_list"
                            android:textStyle="bold"
                            android:textColor="@color/yos_text_primary"
                            android:gravity="center"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Sana Özel Öneriler Başlık -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    style="@style/TextAppearance.YOS.H2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/home_personalized_for_you"
                    android:textColor="@color/yos_text_primary"/>

                <TextView
                    android:id="@+id/seeAllRecommendations"
                    style="@style/TextAppearance.YOS.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_see_all"
                    android:textColor="@color/yos_brand_500"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
                style="@style/TextAppearance.YOS.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_based_on_inventory"
                android:textColor="@color/yos_text_secondary"
                android:layout_marginBottom="12dp"/>

            <!-- Önerilen Tarifler RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recommendedRecipesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                tools:listitem="@layout/item_recipe_card"/>

            <!-- Popüler Tarifler Başlık -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    style="@style/TextAppearance.YOS.H2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/home_trending_recipes"
                    android:textColor="@color/yos_text_primary"/>

                <TextView
                    android:id="@+id/seeAllTrending"
                    style="@style/TextAppearance.YOS.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_see_all"
                    android:textColor="@color/yos_brand_500"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- Popüler Tarifler RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/trendingRecipesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:listitem="@layout/item_recipe_card"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
