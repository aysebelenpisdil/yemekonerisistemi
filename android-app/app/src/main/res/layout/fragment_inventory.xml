<?xml version="1.0" encoding="utf-8"?>
<!-- Buzdolabım (Envanter) Ekranı -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yos_background"
    tools:context=".ui.inventory.InventoryFragment">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yos_surface_base">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Buzdolabım"
            app:titleTextColor="@color/yos_text_primary"
            app:navigationIconTint="@color/yos_text_primary"
            app:subtitleTextColor="@color/yos_text_secondary"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Ana İçerik -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Arama ve Ekleme Alanı -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.YOS.SearchBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <!-- Arama Alanı (EditText) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/searchInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/Widget.YOS.TextInputLayout"
                        android:hint="Malzeme ara veya ekle"
                        app:startIconDrawable="@drawable/ic_search_24"
                        app:endIconMode="clear_text"
                        app:boxStrokeColor="@color/yos_border"
                        app:hintTextColor="@color/yos_text_secondary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/searchEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLines="1"
                            android:imeOptions="actionSearch"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Filtre Butonu -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/filterButton"
                        style="@style/Widget.YOS.Button.Icon.Outlined"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"
                        app:icon="@drawable/ic_filter_24"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:cornerRadius="28dp"
                        app:strokeColor="@color/yos_cta_outline"
                        app:iconTint="@color/yos_cta_text"/>

                    <!-- Ekleme Butonu -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/addButton"
                        style="@style/Widget.YOS.Button.Icon"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"
                        app:icon="@drawable/ic_add_24"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:cornerRadius="28dp"
                        app:backgroundTint="@color/yos_cta_solid"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Arama Önerileri (Trendyol-style) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/suggestionsCard"
                style="@style/Widget.YOS.Card.Recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/suggestionsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="300dp"
                    android:scrollbars="vertical"/>

            </com.google.android.material.card.MaterialCardView>

            <!-- Kategoriler ve Malzemeler -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/categoriesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                tools:listitem="@layout/item_ingredient"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Alt Buton -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/findRecipesButton"
        style="@style/Widget.YOS.Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:text="Tarifleri Bul"
        android:textSize="16sp"
        app:cornerRadius="999dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>