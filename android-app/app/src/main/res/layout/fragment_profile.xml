<?xml version="1.0" encoding="utf-8"?>
<!-- Profil Ekranı - Minimal Premium Design -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yos_background"
    tools:context=".ui.profile.ProfileFragment">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yos_surface_base">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Profil"
            app:titleTextColor="@color/yos_text_primary"
            app:navigationIconTint="@color/yos_text_primary"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Ana İçerik -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Hesap Kartı -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.YOS.Card.Recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        style="@style/TextAppearance.YOS.H2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hesap"
                        android:textColor="@color/yos_text_primary"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/userEmailText"
                        style="@style/TextAppearance.YOS.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kullanici@email.com"
                        android:textColor="@color/yos_text_secondary"
                        android:layout_marginBottom="16dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/logoutButton"
                        style="@style/Widget.YOS.Button.Secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Çıkış Yap"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Tercihler Kartı - Expandable Sections -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.YOS.Card.Recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        style="@style/TextAppearance.YOS.H2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tercihler"
                        android:textColor="@color/yos_text_primary"
                        android:layout_marginBottom="8dp"/>

                    <!-- Diyet Tipleri -->
                    <com.yemekonerisistemi.app.ui.components.ExpandablePreferenceView
                        android:id="@+id/prefDietTypes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <!-- Alerjenler -->
                    <com.yemekonerisistemi.app.ui.components.ExpandablePreferenceView
                        android:id="@+id/prefAllergens"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <!-- Mutfak Tercihleri -->
                    <com.yemekonerisistemi.app.ui.components.ExpandablePreferenceView
                        android:id="@+id/prefCuisines"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <!-- Pişirme Süresi -->
                    <com.yemekonerisistemi.app.ui.components.ExpandablePreferenceView
                        android:id="@+id/prefCookingTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <!-- Kalori Limiti -->
                    <com.yemekonerisistemi.app.ui.components.ExpandablePreferenceView
                        android:id="@+id/prefCalories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <!-- Zorluk Seviyesi -->
                    <com.yemekonerisistemi.app.ui.components.ExpandablePreferenceView
                        android:id="@+id/prefSkillLevels"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <!-- Baharatlılık -->
                    <com.yemekonerisistemi.app.ui.components.ExpandablePreferenceView
                        android:id="@+id/prefSpice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <!-- Porsiyon -->
                    <com.yemekonerisistemi.app.ui.components.ExpandablePreferenceView
                        android:id="@+id/prefServingSizes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <!-- Öğün Tipi -->
                    <com.yemekonerisistemi.app.ui.components.ExpandablePreferenceView
                        android:id="@+id/prefMealTypes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Envanter & Listeler -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.YOS.Card.Recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        style="@style/TextAppearance.YOS.H2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Envanter &amp; Listeler"
                        android:textColor="@color/yos_text_primary"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/myInventoryButton"
                            style="@style/Widget.YOS.Button.Primary"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Buzdolabım"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/shoppingListButton"
                            style="@style/Widget.YOS.Button.Secondary"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Alışveriş Listesi"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Haftalık Özet -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.YOS.Card.Recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        style="@style/TextAppearance.YOS.H2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Haftalık Özet"
                        android:textColor="@color/yos_text_primary"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/weeklySummaryText"
                        style="@style/TextAppearance.YOS.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bu hafta 5 yeni tarif denedin • İsraf %8 azaldı"
                        android:textColor="@color/yos_text_secondary"
                        android:lineSpacingExtra="4dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Kaydedilenler -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.YOS.Card.Recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextAppearance.YOS.H2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kaydedilenler"
                            android:textColor="@color/yos_text_primary"/>

                        <TextView
                            android:id="@+id/savedCountText"
                            style="@style/TextAppearance.YOS.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="23 tarif"
                            android:textColor="@color/yos_text_secondary"
                            android:layout_marginTop="4dp"/>

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/viewAllSavedButton"
                        style="@style/Widget.YOS.Button.Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hepsini Gör"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Bildirimler -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.YOS.Card.Recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        style="@style/TextAppearance.YOS.H2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bildirimler"
                        android:textColor="@color/yos_text_primary"
                        android:layout_marginBottom="12dp"/>

                    <!-- Yeni Öneriler Switch -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            style="@style/TextAppearance.YOS.Body"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Yeni öneriler"
                            android:textColor="@color/yos_text_primary"/>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/notificationsRecommendationsSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/yos_divider"
                        android:layout_marginVertical="8dp"/>

                    <!-- Envanter Uyarıları Switch -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            style="@style/TextAppearance.YOS.Body"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Envanter uyarıları"
                            android:textColor="@color/yos_text_primary"/>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/notificationsInventorySwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/yos_divider"
                        android:layout_marginVertical="8dp"/>

                    <!-- Haftalık Özet Switch -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            style="@style/TextAppearance.YOS.Body"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Haftalık özet"
                            android:textColor="@color/yos_text_primary"/>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/notificationsWeeklySummarySwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Gizlilik -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.YOS.Card.Recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        style="@style/TextAppearance.YOS.H2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gizlilik"
                        android:textColor="@color/yos_text_primary"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        style="@style/TextAppearance.YOS.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verileriniz güvenle saklanmaktadır"
                        android:textColor="@color/yos_text_secondary"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/downloadDataButton"
                            style="@style/Widget.YOS.Button.Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Verimi İndir"
                            android:layout_marginEnd="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/deleteDataButton"
                            style="@style/Widget.YOS.Button.Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hesabı Sil"
                            android:textColor="@color/yos_error"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Destek -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.YOS.Card.Recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        style="@style/TextAppearance.YOS.H2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Destek"
                        android:textColor="@color/yos_text_primary"
                        android:layout_marginBottom="12dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/feedbackButton"
                        style="@style/Widget.YOS.Button.Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Geri bildirim gönder"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>