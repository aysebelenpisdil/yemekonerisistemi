<?xml version="1.0" encoding="utf-8"?>
<!-- Sana Özel Öneriler Ekranı -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yos_background"
    tools:context=".ui.recipes.RecipeListFragment">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yos_surface_base">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/yos_surface_base">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/yos_surface_elevated">

                <TextView
                    style="@style/TextAppearance.YOS.Display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sana Özel Öneriler"
                    android:textColor="@color/yos_text_primary"/>

                <TextView
                    android:id="@+id/recipeCountText"
                    style="@style/TextAppearance.YOS.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="12 tarif bulundu"
                    android:textColor="@color/yos_text_secondary"/>

            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Tarif Listesi -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:listitem="@layout/item_recipe_card"/>

    <!-- Yükleniyor Göstergesi -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/yos_cta_solid"
        android:visibility="gone"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>