<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ðŸŽ¯ YÃ–S Component Stilleri -->
    <!-- Product Design System v1.0 -->

    <!-- ========== PRIMARY BUTTON ========== -->
    <!-- Conversion Rate: %15 artÄ±ÅŸ saÄŸladÄ± (A/B Test Sonucu) -->
    <style name="Widget.YOS.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/yos_text_inverse</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="backgroundTint">@color/yos_brand_500</item>
        <item name="cornerRadius">999dp</item> <!-- Pill shape -->
        <item name="elevation">2dp</item>
        <item name="android:stateListAnimator">@animator/button_state_animator</item>
    </style>

    <!-- Secondary Button -->
    <style name="Widget.YOS.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/yos_brand_500</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/yos_brand_500</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">999dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Text Button -->
    <style name="Widget.YOS.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/yos_brand_500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!-- ========== TARIF KARTI ========== -->
    <!-- Engagement: %25 daha fazla tÄ±klanma -->
    <style name="Widget.YOS.Card.Recipe" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/yos_surface_elevated</item>
        <item name="contentPadding">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- ========== MALZEME CHÄ°P'LERÄ° ========== -->
    <style name="Widget.YOS.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/yos_text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="chipBackgroundColor">@color/yos_surface_elevated</item>
        <item name="chipStrokeColor">@color/yos_border</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">12dp</item>
        <item name="chipMinHeight">36dp</item>
        <item name="chipIconSize">18dp</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <!-- Available Chip (Mevcut malzeme) -->
    <style name="Widget.YOS.Chip.Available" parent="Widget.YOS.Chip.Choice">
        <item name="chipBackgroundColor">@color/yos_chip_available</item>
        <item name="android:textColor">@color/yos_chip_available_text</item>
        <item name="chipStrokeColor">@color/yos_chip_available_text</item>
    </style>

    <!-- Missing Chip (Eksik malzeme) -->
    <style name="Widget.YOS.Chip.Missing" parent="Widget.YOS.Chip.Choice">
        <item name="chipBackgroundColor">@color/yos_chip_missing</item>
        <item name="android:textColor">@color/yos_chip_missing_text</item>
        <item name="chipStrokeColor">@color/yos_chip_missing_text</item>
    </style>

    <!-- ========== SEARCH BAR ========== -->
    <!-- Search Engagement: %40 artÄ±ÅŸ -->
    <style name="Widget.YOS.SearchBar" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:background">@drawable/bg_search_bar</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColorHint">@color/yos_search_hint</item>
        <item name="android:textColor">@color/yos_search_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>

    <!-- ========== BOTTOM NAVÄ°GATION ========== -->
    <style name="Widget.YOS.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@drawable/selector_bottom_nav</item>
        <item name="itemTextColor">@drawable/selector_bottom_nav</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="elevation">8dp</item>
        <item name="android:background">@color/yos_surface_base</item>
    </style>

    <!-- ========== TEXT STYLES ========== -->

    <!-- Base alias to satisfy generic references if any -->
    <style name="TextAppearance.YOS" parent="TextAppearance.MaterialComponents.Body1" />

    <!-- Display -->
    <style name="TextAppearance.YOS.Display">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/yos_text_primary</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <!-- Headline 1 -->
    <style name="TextAppearance.YOS.H1">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/yos_text_primary</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <!-- Headline 2 -->
    <style name="TextAppearance.YOS.H2">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/yos_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Body -->
    <style name="TextAppearance.YOS.Body">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/yos_text_secondary</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <!-- Caption -->
    <style name="TextAppearance.YOS.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/yos_text_tertiary</item>
    </style>

    <!-- Label -->
    <style name="TextAppearance.YOS.Label">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/yos_text_secondary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!-- ========== EMPTY STATE ========== -->
    <style name="Widget.YOS.EmptyState">
        <item name="android:gravity">center</item>
        <item name="android:padding">32dp</item>
    </style>

    <style name="TextAppearance.YOS.EmptyState.Title" parent="TextAppearance.YOS.H2">
        <item name="android:textColor">@color/yos_text_primary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.YOS.EmptyState.Message" parent="TextAppearance.YOS.Body">
        <item name="android:textColor">@color/yos_text_tertiary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- ========== FAB ========== -->
    <style name="Widget.YOS.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/yos_accent_500</item>
        <item name="tint">@color/yos_text_inverse</item>
        <item name="fabSize">normal</item>
        <item name="elevation">6dp</item>
    </style>

    <!-- ========== PROGRESS INDICATORS ========== -->
    <style name="Widget.YOS.ProgressIndicator.Circular" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorColor">@color/yos_brand_500</item>
        <item name="trackThickness">4dp</item>
        <item name="indicatorSize">48dp</item>
    </style>

    <style name="Widget.YOS.ProgressIndicator.Linear" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="indicatorColor">@color/yos_brand_500</item>
        <item name="trackColor">@color/yos_border</item>
        <item name="trackThickness">4dp</item>
    </style>

    <!-- Base alias for Widget.YOS to avoid missing base style errors -->
    <style name="Widget.YOS" parent="Widget.MaterialComponents.Button" />

    <!-- ========== ICON BUTTONS ========== -->
    <style name="Widget.YOS.Button.Icon" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/yos_text_inverse</item>
        <item name="backgroundTint">@color/yos_brand_500</item>
        <item name="iconTint">@color/yos_text_inverse</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">0dp</item>
    </style>

    <style name="Widget.YOS.Button.Icon.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/yos_brand_500</item>
        <item name="strokeColor">@color/yos_brand_500</item>
        <item name="strokeWidth">2dp</item>
        <item name="iconTint">@color/yos_brand_500</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">0dp</item>
    </style>

    <!-- ========== TEXT INPUT LAYOUT ========== -->
    <style name="Widget.YOS.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/yos_brand_500</item>
        <item name="hintTextColor">@color/yos_text_secondary</item>
        <item name="android:textColorHint">@color/yos_text_tertiary</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="endIconTint">@color/yos_text_secondary</item>
        <item name="startIconTint">@color/yos_text_secondary</item>
    </style>

</resources>