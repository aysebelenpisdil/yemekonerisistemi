<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ðŸŽ¯ YÃ–S Component Stilleri -->
    <!-- Product Design System v1.0 -->

    <!-- ========== PRIMARY BUTTON (Minimal Premium) ========== -->
    <style name="Widget.YOS.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/yos_text_inverse</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">44dp</item>
        <item name="backgroundTint">@color/yos_cta_solid</item>
        <item name="cornerRadius">999dp</item> <!-- KapsÃ¼l ÅŸekli -->
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Secondary Button (Outlined - Minimal) -->
    <style name="Widget.YOS.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/yos_cta_text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="strokeColor">@color/yos_cta_outline</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">999dp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">11dp</item>
    </style>

    <!-- Text Button (Minimal) -->
    <style name="Widget.YOS.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/yos_cta_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="rippleColor">@color/yos_divider</item>
    </style>

    <!-- ========== TARIF KARTI (Minimal) ========== -->
    <style name="Widget.YOS.Card.Recipe" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/yos_surface_elevated</item>
        <item name="contentPadding">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/yos_border</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- ========== MALZEME CHÄ°P'LERÄ° (Minimal) ========== -->
    <style name="Widget.YOS.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/yos_text_secondary</item>
        <item name="android:textSize">13sp</item>
        <item name="chipBackgroundColor">@color/yos_surface_base</item>
        <item name="chipStrokeColor">@color/yos_border</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="chipIconSize">16dp</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <!-- Available Chip (Minimal) -->
    <style name="Widget.YOS.Chip.Available" parent="Widget.YOS.Chip.Choice">
        <item name="chipBackgroundColor">@color/yos_chip_available</item>
        <item name="android:textColor">@color/yos_chip_available_text</item>
        <item name="chipStrokeColor">@color/yos_border</item>
    </style>

    <!-- Missing Chip (Minimal) -->
    <style name="Widget.YOS.Chip.Missing" parent="Widget.YOS.Chip.Choice">
        <item name="chipBackgroundColor">@color/yos_chip_missing</item>
        <item name="android:textColor">@color/yos_chip_missing_text</item>
        <item name="chipStrokeColor">@color/yos_divider</item>
    </style>

    <!-- ========== SEARCH BAR (Minimal) ========== -->
    <style name="Widget.YOS.SearchBar" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:background">@drawable/bg_search_bar</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColorHint">@color/yos_search_hint</item>
        <item name="android:textColor">@color/yos_search_text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>

    <!-- ========== BOTTOM NAVÄ°GATION (Minimal) ========== -->
    <style name="Widget.YOS.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@drawable/selector_bottom_nav</item>
        <item name="itemTextColor">@drawable/selector_bottom_nav</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="elevation">0dp</item>
        <item name="android:background">@color/yos_surface_base</item>
    </style>

    <!-- ========== TEXT STYLES ========== -->

    <!-- Base alias to satisfy generic references if any -->
    <style name="TextAppearance.YOS" parent="TextAppearance.MaterialComponents.Body1" />

    <!-- Display -->
    <style name="TextAppearance.YOS.Display">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/yos_text_primary</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <!-- Headline 1 -->
    <style name="TextAppearance.YOS.H1">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/yos_text_primary</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <!-- Headline 2 -->
    <style name="TextAppearance.YOS.H2">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/yos_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Body -->
    <style name="TextAppearance.YOS.Body">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/yos_text_secondary</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <!-- Caption -->
    <style name="TextAppearance.YOS.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/yos_text_tertiary</item>
    </style>

    <!-- Label -->
    <style name="TextAppearance.YOS.Label">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/yos_text_secondary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!-- ========== EMPTY STATE ========== -->
    <style name="Widget.YOS.EmptyState">
        <item name="android:gravity">center</item>
        <item name="android:padding">32dp</item>
    </style>

    <style name="TextAppearance.YOS.EmptyState.Title" parent="TextAppearance.YOS.H2">
        <item name="android:textColor">@color/yos_text_primary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.YOS.EmptyState.Message" parent="TextAppearance.YOS.Body">
        <item name="android:textColor">@color/yos_text_tertiary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- ========== FAB (Minimal) ========== -->
    <style name="Widget.YOS.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/yos_cta_solid</item>
        <item name="tint">@color/yos_text_inverse</item>
        <item name="fabSize">normal</item>
        <item name="elevation">2dp</item>
    </style>

    <!-- ========== PROGRESS INDICATORS (Minimal) ========== -->
    <style name="Widget.YOS.ProgressIndicator.Circular" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorColor">@color/yos_cta_solid</item>
        <item name="trackThickness">2dp</item>
        <item name="indicatorSize">40dp</item>
    </style>

    <style name="Widget.YOS.ProgressIndicator.Linear" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="indicatorColor">@color/yos_cta_solid</item>
        <item name="trackColor">@color/yos_border</item>
        <item name="trackThickness">2dp</item>
    </style>

    <!-- Base alias for Widget.YOS to avoid missing base style errors -->
    <style name="Widget.YOS" parent="Widget.MaterialComponents.Button" />

    <!-- ========== ICON BUTTONS (Minimal) ========== -->
    <style name="Widget.YOS.Button.Icon" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/yos_text_inverse</item>
        <item name="backgroundTint">@color/yos_cta_solid</item>
        <item name="iconTint">@color/yos_text_inverse</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.YOS.Button.Icon.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/yos_cta_text</item>
        <item name="strokeColor">@color/yos_cta_outline</item>
        <item name="strokeWidth">1dp</item>
        <item name="iconTint">@color/yos_cta_text</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">0dp</item>
    </style>

    <!-- ========== TEXT INPUT LAYOUT (Minimal) ========== -->
    <style name="Widget.YOS.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/yos_border</item>
        <item name="hintTextColor">@color/yos_text_secondary</item>
        <item name="android:textColorHint">@color/yos_text_tertiary</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="endIconTint">@color/yos_text_tertiary</item>
        <item name="startIconTint">@color/yos_text_tertiary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

</resources>